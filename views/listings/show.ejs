<%- layout("/layouts/boilerplate")%>

<body>
    <div class="row">
        <div class="col-6 offset-3">
            <h1 class="mt-3">Listing Details:</h1>
            <div class="card">
                <img src="<%= listing.image%>" style="height: 40vh; width: 18rem;" class="card-img-top" alt="...">
                <br/>
                <div class="card-body">
                  <b><%= listing.title%><br/> </b>
                  <%= listing.description %> <br/>
                  $<%= listing.price.toLocaleString('en-US')%><br/>
                  <%= listing.location%> <br/>
                  <%= listing.country %><br/> <br/>
                 <div class="show-btns">
                    <a class="btn me-2 col-2 add-btn" href="/listings/<%=listing._id%>/edit"> Edit</a>
                    <form  method="post" action="/listings/<%=listing._id%>?_method=DELETE"><button class="btn btn-dark">Delete</button></form>
                 </div>              
                </div>
              </div>
        </div>
    </div>
    

    <br/>
    
</body> 