<%- layout("/layouts/boilerplate")%>

<body>
    <div class="row">
        <div class="col-6 offset-3">
            <h1 class="mt-3"><b><%= listing.title%><br/> </b></h1>
            <div class="card">
                <img src="<%= listing.image%>" style="height: 40vh; width: 18rem;" class="card-img-top" alt="...">
                <br/>
                <div class="card-body">
                  <%= listing.description %> <br/>
                  $<%= listing.price.toLocaleString('en-US')%><br/>
                  <%= listing.location%> <br/>
                  <%= listing.country %><br/> <br/>
                <div class="show-btns">
                    <a class="btn me-2 col-2 add-btn" href="/listings/<%=listing._id%>/edit">
                        Edit
                    </a>
                    <form  method="post" action="/listings/<%=listing._id%>?_method=DELETE">
                        <button class="btn btn-dark">Delete</button>
                    </form>
                </div>  
                <hr/>
                <h3> Leave a review</h3>
                <form action="/listings/<%=listing._id%>/reviews" method="post">
                    <div> 
                        <label class="form-label" for="rating">Rating</label>
                        <input type="range" min="1" max="5" id ='rating' name="review[rating]"></input>
                    </div>
                    <div>
                        <label class="form-label" for="comment">Comment</label>
                        <textarea class="form-control" type="text" id="comment" name="review[comment]" rows="10" cols="30"></textarea>
                    </div>
                    <button class="mt-3 btn btn-dark" type="submit">Submit</button>
                </form>
                </div>
              </div>
        </div>
    </div>
    

    <br/>
    
</body> 